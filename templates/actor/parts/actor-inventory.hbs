<div class="inventory-wrapper">

  {{#each inventory as |container name|}}

  <div class="items-list inventory-container input-group" data-slot="{{name}}"
    style="grid-area:{{name}}; height: calc({{container.size}} * var(--item-height) + var(--item-header-height) + 4px)">
    <div class="items-header">
      <div class="item-name">{{container.label}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize 'VAGABONDS.Create'}}" data-type="item"
          data-slot="{{name}}"><i class="fas fa-plus"></i></a>
      </div>
    </div>

    {{#each container.items as |item id|}}
    <div class="item" draggable="true" data-item-id="{{item._id}}"
      style="height: calc({{item.system.size}} * var(--item-height))">
      <div class="item-name">
        <div class="item-image">
          <img src="{{item.img}}" title="{{item.name}}" />
        </div>
        <h3>{{item.name}} <b>{{bonus item.system.bonus}}</b></h3>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize 'VAGABONDS.Edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'VAGABONDS.Delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </div>
    {{/each}}

  </div>
  {{/each}}

</div>